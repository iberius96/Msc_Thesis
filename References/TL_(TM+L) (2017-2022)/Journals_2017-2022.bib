	doi = {https://doi.org/10.1016/j.joi.2020.101103},
	issn = {1751-1577},
	journal = {Journal of Informetrics},
	keywords = {Inventor profile mining, Human resource, Scouting, Technology-based firm, Patent analysis},
	number = {1},
