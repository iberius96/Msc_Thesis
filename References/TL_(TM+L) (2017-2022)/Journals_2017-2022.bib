	title = {Qualitative measures for ad hoc table retrieval},
	url = {https://www.sciencedirect.com/science/article/pii/S0020025522005126},
	volume = {607},
	year = {2022},
	bdsk-url-1 = {https://www.sciencedirect.com/science/article/pii/S0020025522005126},
