	doi = {https://doi.org/10.1016/j.knosys.2019.05.031},
	issn = {0950-7051},
	journal = {Knowledge-Based Systems},
	keywords = {Healthcare mining, Treatment patterns, Treatment recommendation, Electronic medical records, Treatment regimen},
