	doi = {https://doi.org/10.1016/j.eswa.2016.10.036},
	issn = {0957-4174},
	journal = {Expert Systems with Applications},
	keywords = {Inference, Stochastic MCMC, Subgradient MCMC, Bayesian max-margin models, Approximate detailed balance},
