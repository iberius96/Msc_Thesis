	issn = {0957-4174},
	journal = {Expert Systems with Applications},
	keywords = {Image classification, Object Bank, Dimensionality reduction, Pooling, Image feature},
	pages = {250-264},
	title = {A pooled Object Bank descriptor for image scene classification},
